#pragma once

/**
 * @file version.hpp
 * @brief Versioning and deprecation macros for the stable Lightgraph API.
 */

#define LIGHTGRAPH_VERSION_MAJOR @PROJECT_VERSION_MAJOR@
#define LIGHTGRAPH_VERSION_MINOR @PROJECT_VERSION_MINOR@
#define LIGHTGRAPH_VERSION_PATCH @PROJECT_VERSION_PATCH@
#define LIGHTGRAPH_VERSION_STRING "@PROJECT_VERSION@"

#if defined(__clang__) || defined(__GNUC__)
#define LIGHTGRAPH_DEPRECATED(message) __attribute__((deprecated(message)))
#elif defined(_MSC_VER)
#define LIGHTGRAPH_DEPRECATED(message) __declspec(deprecated(message))
#else
#define LIGHTGRAPH_DEPRECATED(message)
#endif

namespace lightgraph {

inline constexpr int kVersionMajor = LIGHTGRAPH_VERSION_MAJOR;
inline constexpr int kVersionMinor = LIGHTGRAPH_VERSION_MINOR;
inline constexpr int kVersionPatch = LIGHTGRAPH_VERSION_PATCH;
inline constexpr const char* kVersionString = LIGHTGRAPH_VERSION_STRING;

}  // namespace lightgraph
